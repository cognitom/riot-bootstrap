{
  "name": "riot-bootstrap",
  "version": "1.0.1",
  "description": "Bootstrap-like Components for Riot.js",
  "jsnext:main": "dist/riot-bootstrap.es6.js",
  "main": "dist/riot-bootstrap.cjs.js",
  "browser": "dist/riot-bootstrap.amd.js",
  "homepage": "https://github.com/cognitom/riot-bootstrap",
  "repository": {
    "type": "git",
    "url": "git://github.com/cognitom/riot-bootstrap.git"
  },
  "author": "Tsutomu Kawamura <cognitom@gmail.com>",
  "license": "MIT",
  "keywords": [
    "riot",
    "riotcomponent",
    "component",
    "bootstrap"
  ],
  "dependencies": {
    "riot-mixin-pack": "^0.1.6",
    "sometime-riot": "^1.0.0"
  },
  "devDependencies": {
    "babel-preset-es2015-rollup": "^1.0.0",
    "browser-sync": "^2.10.0",
    "change-case": "^2.3.1",
    "chokidar-cli": "^1.2.0",
    "eslint": "^1.10.3",
    "expect.js": "^0.3.1",
    "karma": "^0.13.19",
    "karma-mocha": "^0.2.1",
    "karma-mocha-reporter": "^1.1.5",
    "karma-phantomjs-launcher": "^0.2.3",
    "karma-riot": "^1.0.1",
    "mocha": "^2.3.4",
    "phantomjs": "^1.9.19",
    "riot": "^2.3.12",
    "riot-compiler": "^2.3.20",
    "rollup": "^0.24.0",
    "rollup-plugin-babel": "^2.3.8",
    "rollup-plugin-commonjs": "^2.1.0",
    "rollup-plugin-json": "^2.0.0",
    "rollup-plugin-npm": "^1.2.1",
    "rollup-plugin-riot": "^0.1.0",
    "rollup-pluginutils": "^1.3.1",
    "uglify-js": "^2.6.1"
  },
  "scripts": {
    "build": "node rollup.js",
    "pretest": "npm run build",
    "test": "npm run eslint && npm run karma",
    "eslint": "eslint -c ./.eslintrc src/*.js",
    "karma": "karma start test/karma.conf.js",
    "server": "browser-sync start --files 'dist/riot-bootstrap.js, dist/demo.js, index.html' --server",
    "watch": "chokidar 'src/*' 'demo/*' 'node_modules/riot-mixin-pack/dist/riot-mixin-pack.es6.js' -c 'npm run build'",
    "start": "npm run server & npm run watch",
    "prepublish": "npm run build"
  }
}
